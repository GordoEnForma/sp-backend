const mongoose=require('mongoose');

const temaEspecificoSchema=new mongoose.Schema({
    nombre:{
        type:String,
        required:true,
    },
    temaGeneral:{
        type:mongoose.Schema.Types.ObjectId,
        ref:'TemaGeneral'
    },
    producto:{
        type:mongoose.Schema.Types.ObjectId,
        ref:'Producto'
    },
    preguntas:[{
        type:mongoose.Schema.Types.ObjectId,
        ref:'Pregunta',
    }]
})

module.exports=mongoose.model('TemaEspecifico',temaEspecificoSchema);